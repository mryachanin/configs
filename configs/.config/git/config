[color]
    ui = auto

[include]
    path = config_local

[push]
    default = simple

[alias]
    a = add
    aa = add --all
    bd = branch -D
    bsu = branch --set-upstream-to
    c = commit -v
    ca = commit -v --amend
    d = diff
    ds = diff --stat
    dc = diff --cached
    dcs = diff --cached --stat
    dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
    mff = merge --ff-only
    pr = pull --rebase
    pd = push --delete
    rc = rebase --continue
    rs = rebase --skip
    st = status

